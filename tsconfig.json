{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "outDir": "build",
        "rootDir": "src",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noResolve": false
    },
    "files": [
      "src/worker/main_worker.ts",
      "src/ui/main_ui.ts",
      "src/main-server.ts"
    ],
    "exclude": [
        "node_modules/"
    ]
}
